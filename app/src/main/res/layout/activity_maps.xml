<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rb.vorujak.MapsActivity"
    android:background="@color/colorPrimary"
    android:id="@+id/mlayout"
    >
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:id="@+id/textView16"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="8%"
        android:layout_alignParentTop="true"
        app:layout_marginTopPercent="7%"
        android:layout_centerHorizontal="true"
        android:text=""
        android:background="@drawable/textv"
        />
    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv1"
        android:text=""
        android:textColor="@color/White"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:layout_marginTopPercent="9%"
        app:layout_marginLeftPercent="49%"
        android:textSize="8pt"
         />

    <TextView
        android:id="@+id/gold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_gravity="center"
        app:layout_marginTopPercent="9%"
        app:layout_marginLeftPercent="25%"
        android:textSize="8pt"
        android:textColor="@color/White"
        />


    <ImageView
        android:id="@+id/iv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/star"
        android:layout_alignParentLeft="true"
        app:layout_marginLeftPercent="40%"
        app:layout_marginTopPercent="9%"
        />

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/bitcoin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:layout_marginLeftPercent="15%"
        app:layout_marginTopPercent="9%"
        />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:layout_marginRightPercent="5%"
        app:layout_marginBottomPercent="5%"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/location"
        android:elevation="15dp"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        app:fabSize="mini"
        app:layout_marginRightPercent="5%"
        app:layout_marginBottomPercent="5%"
        app:srcCompat="@drawable/help"
        android:elevation="15dp"
        android:onClick="Clickhelp"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        app:layout_marginRightPercent="5%"
        app:layout_marginBottomPercent="5%"
        app:fabSize="mini"
        app:srcCompat="@drawable/aboutus"
        android:elevation="15dp"
        android:onClick="Clickabout"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        app:layout_marginRightPercent="5%"
        app:layout_marginBottomPercent="5%"
        app:fabSize="mini"
        app:srcCompat="@drawable/down"
        android:onClick="fab"
        android:elevation="15dp"
        />

    <Button
        android:id="@+id/button3"
        app:layout_widthPercent="7%"
        app:layout_heightPercent="4%"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        app:layout_marginTopPercent="9%"
        app:layout_marginLeftPercent="75%"
        android:text=""
        android:background="@drawable/sound"
        android:onClick="sound"
        android:alpha="0.5"
        />


</android.support.percent.PercentRelativeLayout>