<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rb.vorujak.Help"
    android:background="@color/White"
    >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="10%"
        android:text="راهنما"
        android:textStyle="bold"
        android:textColor="@color/dpurple"
        android:textSize="22dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        app:layout_widthPercent="85%"
        app:layout_heightPercent="55%"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView2"
        app:layout_marginTopPercent="4%">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/matn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text=" با استفاده از نقشه به نقاط مشخص شده برو، اطرافت را خوب بگرد و QR های پنهان شده رو اسکن کن و ببین چه در انتظارته!!!! اگر معما بود سعی کن جوابش رو پیدا کنی و جایزه رو از آن خودت کنی."
                android:textColor="@color/dpurple"
                android:textSize="8pt"
                android:textStyle="bold"
                android:textAlignment="center"
                android:lineSpacingExtra="3dp"
                />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/pingi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        app:srcCompat="@drawable/ping"
        />
</android.support.percent.PercentRelativeLayout>
