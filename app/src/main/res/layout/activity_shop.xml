<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rb.vorujak.Shop"
    android:background="@drawable/backgr"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:layout_marginTopPercent="3%"
        app:layout_marginRightPercent="2%"
        app:srcCompat="@drawable/cancel"
        android:clickable="true"
        android:onClick="ClickBack"/>

    <ImageView
        android:id="@+id/pot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        app:layout_marginTopPercent="0.2%"
        app:layout_marginRightPercent="15%"
        app:srcCompat="@drawable/potion"
        android:clickable="true"
        android:onClick="ClickPotion"
        />

    <ImageView
        android:id="@+id/potr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        app:layout_marginTopPercent="2%"
        app:layout_marginRightPercent="10%"
        android:layout_toLeftOf="@+id/pot"
        android:layout_below="@+id/imageView"
        app:srcCompat="@drawable/hppotion" />

    <ImageView
        android:id="@+id/arm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="8.2%"
        app:srcCompat="@drawable/armor"
        android:layout_below="@+id/potr"
        app:layout_marginLeftPercent="18%"
        android:clickable="true"
        android:onClick="ClickArmor"
        />

    <ImageView
        android:id="@+id/fir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/fire"
        android:layout_below="@+id/pot"
        android:layout_alignParentRight="true"
        app:layout_marginTopPercent="9%"
        app:layout_marginRightPercent="16%"
        android:onClick="ClickStar"
        android:clickable="true"
        />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/arm"
        app:layout_marginTopPercent="10%"
        app:layout_marginLeftPercent="19%"
        app:srcCompat="@drawable/shamshir"
        android:alpha="0.5"/>

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/magicsphere"
        android:layout_alignParentRight="true"
        app:layout_marginTopPercent="51%"
        app:layout_marginRightPercent="15%"
        android:alpha="0.5"/>

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bow"
        app:layout_marginTopPercent="3%"
        android:layout_below="@+id/imageView13"
        android:layout_centerHorizontal="true"
        android:alpha="0.5"/>

    <ImageView
        android:id="@+id/kharid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
       android:layout_below="@+id/textView11"
        android:clickable="true"
        android:onClick="ClickTake"
        />

    <TextView
        android:id="@+id/textView5"
        app:layout_widthPercent="22%"
        android:layout_height="wrap_content"
        android:text="50000$"
        android:textColor="@color/White"
        android:textSize="20dp"
        android:background="@color/orange"
        android:textAlignment="center"
        android:layout_below="@+id/potr"
        android:layout_alignParentLeft="true"
        app:layout_marginLeftPercent="18%"
        app:layout_marginTopPercent="0.5%"/>

    <TextView
        android:id="@+id/textView6"
        app:layout_widthPercent="20%"
        android:layout_height="wrap_content"
        android:text="300$"
        android:textColor="@color/White"
        android:textSize="20dp"
        android:textAlignment="center"
        android:background="@color/orange"
        android:layout_below="@+id/pot"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="15%"
        app:layout_marginTopPercent="0.5%"/>

    <TextView
        android:id="@+id/textView7"
        app:layout_widthPercent="22%"
        android:layout_height="wrap_content"
        android:text="1000$"
        android:textAlignment="center"
        android:textColor="@color/White"
        android:textSize="20dp"
        android:background="@color/orange"
        android:layout_below="@+id/arm"
        app:layout_marginLeftPercent="18%"
        app:layout_marginTopPercent="2%"
  />

    <TextView
        android:id="@+id/textView8"
        app:layout_widthPercent="20%"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="50$"
        android:textColor="@color/White"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/textView7"
        android:layout_below="@+id/fir"
        android:background="@color/orange"
        android:layout_alignParentRight="true"
        app:layout_marginLeftPercent="20%"
        app:layout_marginRightPercent="15%"
        app:layout_marginTopPercent="0.2%"
         />

    <TextView
        android:id="@+id/textView9"
        app:layout_widthPercent="22%"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="5500$"
        android:textColor="@color/White"
        android:textSize="20dp"
        android:background="@color/orange"
        android:layout_below="@+id/imageView7"
        app:layout_marginLeftPercent="18%" />

    <TextView
        android:id="@+id/textView10"
        app:layout_widthPercent="20%"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="5000$"
        android:textColor="@color/White"
        android:textSize="20dp"
        android:background="@color/orange"
        android:layout_below="@+id/imageView13"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="15%" />

    <TextView
        android:id="@+id/textView11"
        app:layout_widthPercent="23%"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="20000$"
        android:textColor="@color/White"
        android:textSize="20dp"
        android:background="@color/orange"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView14"

         />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/kharid"
        android:layout_centerHorizontal="true"
        android:text="خرید با طلا"
        android:textColor="@color/White"
        android:textSize="25dp"
        android:layout_below="@+id/textView11"
        app:layout_marginTopPercent="3%"
        />

    <TextView
        android:id="@+id/sumPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:layout_marginRightPercent="15%"
        app:layout_marginBottomPercent="4%"
        android:text="0$"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        app:layout_marginLeftPercent="15%"
        app:layout_marginBottomPercent="4%"
        android:text="" />

    <TextView
        android:id="@+id/pnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        app:layout_marginTopPercent="20%"
        app:layout_marginRightPercent="15%"
        android:text="" />

    <TextView
        android:id="@+id/snum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        app:layout_marginTopPercent="40%"
        app:layout_marginRightPercent="15%"
        android:text="" />

    <TextView
        android:id="@+id/anum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        app:layout_marginTopPercent="40%"
        app:layout_marginLeftPercent="18%"
        android:text="" />

    <Button
        android:id="@+id/button2"
        android:background="@color/orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:layout_marginTopPercent="5%"
        android:layout_centerHorizontal="true"
        android:text="Reset"
        android:textColor="@color/White"
        android:onClick="ClickReset"
        />

    <TextView
        android:id="@+id/tgold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button2"
        android:layout_toStartOf="@+id/kharid"
        android:text="" />
</android.support.percent.PercentRelativeLayout>
