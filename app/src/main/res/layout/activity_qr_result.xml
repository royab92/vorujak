<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rb.vorujak.QrResult"
    android:background="@color/White"
    >

    <TextView
        android:id="@+id/question"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="20%"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="20%"
        android:text=""
        android:textColor="@color/dpurple"
        android:background="@drawable/qr"
        android:textSize="8pt"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/answer1"
        app:layout_widthPercent="30%"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="3%"
        android:text=""
        android:layout_below="@+id/question"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="10%"
        android:textColor="@color/White"
        android:background="@drawable/textv"
        android:textSize="8pt"
        android:textAlignment="center"
         />

    <Button
        android:id="@+id/answer2"
        app:layout_widthPercent="30%"
        app:layout_heightPercent="7%"
        android:layout_below="@+id/question"
        android:text=""
        android:textColor="@color/White"
        android:background="@drawable/textv"
        android:textSize="8pt"
        android:textAlignment="center"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="60%"
        app:layout_marginTopPercent="3%"/>

    <Button
        android:id="@+id/answer3"
        app:layout_widthPercent="30%"
        app:layout_heightPercent="7%"
        android:layout_below="@+id/answer2"
        android:textColor="@color/White"
        android:background="@drawable/textv"
        android:textSize="8pt"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="3%"
        android:text="" />
    <TextView
        android:id="@+id/textView16"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="8%"
        android:layout_alignParentTop="true"
        app:layout_marginTopPercent="7%"
        android:layout_centerHorizontal="true"
        android:text=""
        android:background="@drawable/textv"
        />
    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv1"
        android:text=""
        android:textColor="@color/White"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:layout_marginTopPercent="9%"
        app:layout_marginLeftPercent="49%"
        android:textSize="8pt"
        />

    <TextView
        android:id="@+id/gold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_gravity="center"
        app:layout_marginTopPercent="9%"
        app:layout_marginLeftPercent="25%"
        android:textSize="8pt"
        android:textColor="@color/White"
        />


    <ImageView
        android:id="@+id/iv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/star"
        android:layout_alignParentLeft="true"
        app:layout_marginLeftPercent="40%"
        app:layout_marginTopPercent="9%"
        />

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/bitcoin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:layout_marginLeftPercent="15%"
        app:layout_marginTopPercent="9%"
        />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:layout_marginRightPercent="5%"
        app:layout_marginBottomPercent="5%"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/location"
        android:elevation="15dp"
        android:onClick="ClickLocation"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        app:fabSize="mini"
        app:layout_marginRightPercent="5%"
        app:layout_marginBottomPercent="5%"
        app:srcCompat="@drawable/help"
        android:elevation="15dp"
        android:onClick="Clickhelp"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        app:layout_marginRightPercent="5%"
        app:layout_marginBottomPercent="5%"
        app:fabSize="mini"
        app:srcCompat="@drawable/aboutus"
        android:elevation="15dp"
        android:onClick="Clickabout"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        app:layout_marginRightPercent="5%"
        app:layout_marginBottomPercent="5%"
        app:fabSize="mini"
        app:srcCompat="@drawable/down"
        android:onClick="fab"
        android:elevation="15dp"
        />

    <Button
        android:id="@+id/button3"
        app:layout_widthPercent="7%"
        app:layout_heightPercent="4%"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        app:layout_marginTopPercent="9%"
        app:layout_marginLeftPercent="75%"
        android:text=""
        android:background="@drawable/sound"
        android:alpha="0.5"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answer3"
        app:srcCompat="@drawable/frame"
        android:layout_centerHorizontal="true"
        android:background="@drawable/qr"
        android:padding="3dp"
        app:layout_marginTopPercent="3%"
        />

    <TextView
        android:id="@+id/award"
        app:layout_widthPercent="40%"
        app:layout_heightPercent="7%"
     android:layout_below="@+id/imageView2"
        android:text="هدیه پاسخ درست"
        app:layout_marginTopPercent="3%"
        android:background="@drawable/qr"
        android:textSize="8pt"
        android:textColor="@color/dpurple"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        />

</android.support.percent.PercentRelativeLayout>
